     ]
    }
   ],
   "source": [
    "print(\"Informe o número do raio: \")\n",
    "raio = int(input())\n",
    "\n",
    "area = 3.1415 * (raio ** 2)\n",
    "\n",
    "if raio <= 0 :\n",
    "    \n",
    "    print(\"Informe um número válido!!\")\n",
    "    \n",
    "else:\n",
    "    print(f\"A área é: {area:.2f}\");"
   ]
